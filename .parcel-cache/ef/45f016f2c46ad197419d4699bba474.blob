html, body {
  width: 100%;
  padding: 0;
  margin: 0;
}

*, *::after, *::before {
  box-sizing: border-box;
}

h1, h2, h3 {
  padding: 0;
  margin: 0;
}

header, footer, main {
  width: 100%;
  min-height: 15vh;
  padding: 2rem;
  margin: 0;
}

main {
  min-height: 70vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

header {
  background: url("8785324d7fb2381c23e426179533c112") no-repeat right top;
}

footer {
  display: flex;
  justify-content: center;
  align-items: center;
}

textarea {
  width: 80vw;
  height: 10rem;
  resize: none;
  border: solid 0 0 2px 0;
}

.isError {
  color: red;
  font-size: 1.2rem;
  font-weight: 700;
}
