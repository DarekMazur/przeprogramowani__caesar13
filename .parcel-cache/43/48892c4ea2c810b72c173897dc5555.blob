html, body {
  width: 100%;
  padding: 0;
  margin: 0;
}

*, *::after, *::before {
  box-sizing: border-box;
}

h1, h2, h3 {
  padding: 0;
  margin: 0;
}

header, footer, main {
  min-height: 15vh;
  padding: 2rem;
  margin: 0;
}

main {
  min-height: 70vh;
}

textarea {
  width: 80%;
  height: 10rem;
  resize: none;
}
