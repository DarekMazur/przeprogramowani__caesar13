label {
  color: #7d7d7d;
  position: absolute;
  top: 3px;
  left: 0;
  transition: 0.2s ease-out all;
  font-size: 16px;
}

.formWrapper {
  position: relative;
  width: 40%;
  padding-right: 2rem;
}

textarea {
  color: #7d7d7d;
  border: none;
  width: 100%;
  background: none;
  height: 30vh;
  resize: none;
  font-family: "DM Mono", monospace;
}

textarea:focus {
  outline: none;
}

textarea:focus + label {
  top: -22px;
  font-size: 13px;
  color: #B4B4B4;
}

textarea:not(:placeholder-shown) + label {
  top: -22px;
  font-size: 13px;
  color: #B4B4B4;
}

.buttonWrapper {
  width: 30vw;
  display: flex;
  justify-content: space-between;
}

button, .sendButton {
  display: block;
  font-size: 10px;
  text-decoration: none;
  padding: 7px 12px;
  font-weight: 500;
  background: none;
  border: 2px solid #000;
  color: #000;
  cursor: pointer;
}

.sendButton {
  color: #fff;
  background: #000;
}

.isError {
  color: red;
  font-size: 1.2rem;
  font-weight: 700;
}